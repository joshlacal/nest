# Catbird Environment Variables
# Copy to .env and configure for local development

# Server Configuration
CATBIRD__SERVER__HOST=127.0.0.1
CATBIRD__SERVER__PORT=3000
CATBIRD__SERVER__BASE_URL=http://localhost:3000

# Redis Configuration
CATBIRD__REDIS__URL=redis://127.0.0.1:6379
CATBIRD__REDIS__KEY_PREFIX=catbird:session:
CATBIRD__REDIS__SESSION_TTL_SECONDS=2592000

# OAuth Configuration
CATBIRD__OAUTH__CLIENT_ID=http://localhost:3000
CATBIRD__OAUTH__REDIRECT_URI=http://localhost:3000/auth/callback
# CATBIRD__OAUTH__PRIVATE_KEY_PATH=config/private_key.pem
# CATBIRD__OAUTH__PRIVATE_KEY_BASE64=

# Logging
RUST_LOG=catbird=debug,tower_http=debug
